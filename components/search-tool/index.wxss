/* components/search-tool/index.wxss */

.search-container {
  height: 30px;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 4px;
  left: 10px;
  right: 10px;
  z-index: 9;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.6);
}

.search-input{
  flex: 1;
  height: 100%;
  padding-left: 10px;
  color: #000;
}

.search-input-placeholder {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.42);
}
