/* components/home-itme/index.wxss */

.item {
  background: #fff;
  padding: 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-name {
  font-size: 34rpx;
  color: #000;
}

.item-value {
  font-size: 28rpx;
  color: #000;
}

.item-time {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
}

.item-tags tag {
  margin-right: 8rpx;
}

.item-info-list {
  margin: 0 -20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.item-info-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-info-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-info-item-border {
  margin: 8prx 0;
  width: 1px;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.2);
}

.item-info-item-title {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}

.item-info-item-value {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}

.item-bottom {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
}

.item-desc-list {
  flex: 1;
}

.item-desc-item {
  display: flex;
  height: 40rpx;
  flex-direction: row;
  align-items: center;
}

.item-desc-item-icon {
  width: 30rpx;
  height: 30rpx;
}

.item-desc-item-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
}

.btn-group {
  align-self: flex-end;
}

.btn {
  display: flex;
  height: 60rpx;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
}
